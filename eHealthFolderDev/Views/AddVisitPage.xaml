<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eHealthFolderDev.Views.AddVisitPage"
             Title="Add Visit"
             BackgroundColor="White">
    
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="25" Spacing="20">
                
                <!-- Progress Indicator -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,20">
                    <BoxView x:Name="Step1Indicator" Grid.Column="0" HeightRequest="4" BackgroundColor="#4CAF50" CornerRadius="2"/>
                    <BoxView x:Name="Step2Indicator" Grid.Column="1" HeightRequest="4" BackgroundColor="#E0E0E0" CornerRadius="2"/>
                    <BoxView x:Name="Step3Indicator" Grid.Column="2" HeightRequest="4" BackgroundColor="#E0E0E0" CornerRadius="2"/>
                </Grid>

                <!-- Step Title -->
                <Label x:Name="StepTitle" 
                       Text="Step 1: Basic Information"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <!-- Step 1: Basic Info -->
                <VerticalStackLayout x:Name="Step1" Spacing="15">
                    <Label Text="Hospital/Clinic" FontSize="16" FontAttributes="Bold"/>
                    <Entry x:Name="HospitalEntry" Placeholder="Enter hospital or clinic name" FontSize="16"/>

                    <Label Text="Date of Visit" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <DatePicker x:Name="DatePicker" Format="dd/MM/yyyy" FontSize="16"/>
                </VerticalStackLayout>

                <!-- Step 2: Doctor Info -->
                <VerticalStackLayout x:Name="Step2" IsVisible="False" Spacing="15">
                    <Label Text="Doctor's Name" FontSize="16" FontAttributes="Bold"/>
                    <Entry x:Name="DoctorEntry" Placeholder="Enter doctor's name" FontSize="16"/>

                    <Label Text="Department" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry x:Name="DepartmentEntry" Placeholder="e.g., Cardiology, Pediatrics" FontSize="16"/>
                </VerticalStackLayout>

                <!-- Step 3: Details -->
                <VerticalStackLayout x:Name="Step3" IsVisible="False" Spacing="15">
                    <Label Text="Diagnosis" FontSize="16" FontAttributes="Bold"/>
                    <Editor x:Name="DiagnosisEditor" 
                            Placeholder="Enter diagnosis or reason for visit" 
                            HeightRequest="100"
                            FontSize="16"/>

                    <Label Text="Notes" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Editor x:Name="NotesEditor" 
                            Placeholder="Additional notes, prescriptions, or follow-up instructions" 
                            HeightRequest="120"
                            FontSize="16"/>
                </VerticalStackLayout>

                <!-- Navigation Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,30,0,10">
                    <Button x:Name="BackButton"
                            Grid.Column="0"
                            Text="Back"
                            Clicked="OnBackClicked"
                            BackgroundColor="#F5F5F5"
                            TextColor="#666666"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="10"
                            BorderColor="#CCCCCC"
                            BorderWidth="1"/>
                    
                    <Button x:Name="NextButton"
                            Grid.Column="1"
                            Text="Next"
                            Clicked="OnNextClicked"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" IsVisible="False" BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True" Color="White" WidthRequest="50" HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>