<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eHealthFolderDev.Views.AddVisitPage"
             Title="Add Visit"
             BackgroundColor="White">
    
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="25" Spacing="20">
                
                <!-- Progress Indicator -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10" Margin="0,10,0,20">
                    <BoxView Grid.Column="0" HeightRequest="4" BackgroundColor="{Binding Step1IndicatorColor}" CornerRadius="2"/>
                    <BoxView Grid.Column="1" HeightRequest="4" BackgroundColor="{Binding Step2IndicatorColor}" CornerRadius="2"/>
                    <BoxView Grid.Column="2" HeightRequest="4" BackgroundColor="{Binding Step3IndicatorColor}" CornerRadius="2"/>
                </Grid>

                <!-- Step Title -->
                <Label Text="{Binding StepTitle}"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <!-- Step 1: Basic Info -->
                <VerticalStackLayout IsVisible="{Binding IsStep1}" Spacing="15">
                    <Label Text="Hospital/Clinic" FontSize="16" FontAttributes="Bold"/>
                    <Entry Text="{Binding NewVisit.Hospital}" Placeholder="Enter hospital or clinic name" FontSize="16"/>

                    <Label Text="Date of Visit" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <DatePicker Date="{Binding NewVisit.Date}" Format="dd/MM/yyyy" FontSize="16"/>
                </VerticalStackLayout>

                <!-- Step 2: Doctor Info -->
                <VerticalStackLayout IsVisible="{Binding IsStep2}" Spacing="15">
                    <Label Text="Doctor's Name" FontSize="16" FontAttributes="Bold"/>
                    <Entry Text="{Binding NewVisit.Doctor}" Placeholder="Enter doctor's name" FontSize="16"/>

                    <Label Text="Department" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry Text="{Binding NewVisit.Department}" Placeholder="e.g., Cardiology, Pediatrics" FontSize="16"/>
                </VerticalStackLayout>

                <!-- Step 3: Details -->
                <VerticalStackLayout IsVisible="{Binding IsStep3}" Spacing="15">
                    <Label Text="Diagnosis" FontSize="16" FontAttributes="Bold"/>
                    <Editor Text="{Binding NewVisit.Diagnosis}"
                            Placeholder="Enter diagnosis or reason for visit" 
                            HeightRequest="100"
                            FontSize="16"/>

                    <Label Text="Notes" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Editor Text="{Binding NewVisit.Notes}"
                            Placeholder="Additional notes, prescriptions, or follow-up instructions" 
                            HeightRequest="120"
                            FontSize="16"/>
                </VerticalStackLayout>

                <!-- Navigation Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,30,0,10">
                    <Button Grid.Column="0"
                            Text="{Binding BackButtonText}"
                            Command="{Binding BackCommand}"
                            BackgroundColor="#F5F5F5"
                            TextColor="#666666"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="10"
                            BorderColor="#CCCCCC"
                            BorderWidth="1"/>
                    
                    <Button Grid.Column="1"
                            Text="{Binding NextButtonText}"
                            Command="{Binding NextCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <Grid IsVisible="{Binding IsLoading}" BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="True" Color="White" WidthRequest="50" HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>