<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eHealthFolderDev.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="White">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Header -->
            <Label 
                Text="Settings"
                FontSize="28"
                FontAttributes="Bold"
                Margin="0,10,0,20"/>

            <!-- Profile Section -->
            <Frame 
                Padding="0"
                CornerRadius="12"
                HasShadow="True"
                BorderColor="LightGray">
                <VerticalStackLayout>
                    <Label 
                        Text="Account"
                        FontSize="16"
                        FontAttributes="Bold"
                        Margin="15,15,15,10"/>
                    
                    <BoxView HeightRequest="1" Color="LightGray"/>
                    
                    <Frame 
                        Padding="15"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMyProfileTapped"/>
                        </Frame.GestureRecognizers>
                        <HorizontalStackLayout Spacing="15">
                            <Label 
                                Text="ðŸ‘¤"
                                FontSize="24"
                                VerticalOptions="Center"/>
                            <Label 
                                Text="My Profile"
                                FontSize="16"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"/>
                            <Label 
                                Text="â€º"
                                FontSize="20"
                                TextColor="Gray"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- App Settings Section -->
            <Frame 
                Padding="0"
                CornerRadius="12"
                HasShadow="True"
                BorderColor="LightGray">
                <VerticalStackLayout>
                    <Label 
                        Text="App Settings"
                        FontSize="16"
                        FontAttributes="Bold"
                        Margin="15,15,15,10"/>
                    
                    <BoxView HeightRequest="1" Color="LightGray"/>
                    
                    <!-- Notifications -->
                    <Grid Padding="15" ColumnDefinitions="*,Auto" ColumnSpacing="15">
                        <HorizontalStackLayout Spacing="15">
                            <Label 
                                Text="ðŸ””"
                                FontSize="24"
                                VerticalOptions="Center"/>
                            <Label 
                                Text="Notifications"
                                FontSize="16"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Switch Grid.Column="1" IsToggled="True" VerticalOptions="Center"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" Color="LightGray" Margin="15,0"/>
                    
                    <!-- Dark Mode -->
                    <Grid Padding="15" ColumnDefinitions="*,Auto" ColumnSpacing="15">
                        <HorizontalStackLayout Spacing="15">
                            <Label 
                                Text="ðŸŒ™"
                                FontSize="24"
                                VerticalOptions="Center"/>
                            <Label 
                                Text="Dark Mode"
                                FontSize="16"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Switch Grid.Column="1" IsToggled="False" VerticalOptions="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- About Section -->
            <Frame 
                Padding="0"
                CornerRadius="12"
                HasShadow="True"
                BorderColor="LightGray">
                <VerticalStackLayout>
                    <Label 
                        Text="About"
                        FontSize="16"
                        FontAttributes="Bold"
                        Margin="15,15,15,10"/>
                    
                    <BoxView HeightRequest="1" Color="LightGray"/>
                    
                    <Grid Padding="15" RowDefinitions="Auto,Auto" RowSpacing="5">
                        <Label 
                            Text="Version"
                            FontSize="16"
                            TextColor="Gray"/>
                        <Label 
                            Grid.Row="1"
                            Text="1.0.0"
                            FontSize="16"
                            FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>