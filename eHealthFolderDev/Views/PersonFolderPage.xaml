<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eHealthFolderDev.Views.PersonFolderPage"
             Title="Patient Folder">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Tab buttons -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Visits" x:Name="VisitsButton" Clicked="VisitsButton_Clicked"
                    TextColor="Black" FontAttributes="Bold"
                    BackgroundColor="#A5D6A7" />
            <Button Text="Appointments" x:Name="AppointmentsButton" Clicked="AppointmentsButton_Clicked"
                    TextColor="Black" FontAttributes="Bold"
                    BackgroundColor="#E0F7FA" />
        </HorizontalStackLayout>

        <!-- Visits CollectionView -->
        <CollectionView x:Name="VisitsCollectionView" IsVisible="True">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#E0F7FA">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" FontAttributes="Bold" />
                            <Label Text="{Binding Doctor}" />
                            <Label Text="{Binding Department}" />
                            <Label Text="{Binding Diagnosis}" />
                            <Label Text="{Binding Treatment}" />
                            <Label Text="{Binding Hospital}" />
                        </VerticalStackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="VisitItem_Tapped" NumberOfTapsRequired="1" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Appointments CollectionView -->
        <CollectionView x:Name="AppointmentsCollectionView" IsVisible="False">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#FFF3E0">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}" FontAttributes="Bold" />
                            <Label Text="{Binding Hospital}" />
                            <Label Text="{Binding Location}" />
                            <Label Text="{Binding Reason}" />
                            <Label Text="{Binding Time}" />
                            <Label Text="{Binding Notes}" />
                        </VerticalStackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="AppointmentItem_Tapped" NumberOfTapsRequired="1" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
