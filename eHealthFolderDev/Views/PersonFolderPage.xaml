<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eHealthFolderDev.Views.PersonFolderPage"
             Title="Patient Folder">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Tab buttons -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Visits" 
                    Command="{Binding ShowVisitsCommand}"
                    TextColor="Black" 
                    FontAttributes="Bold"
                    BackgroundColor="{Binding VisitsButtonColor}" />
            <Button Text="Appointments" 
                    Command="{Binding ShowAppointmentsCommand}"
                    TextColor="Black" 
                    FontAttributes="Bold"
                    BackgroundColor="{Binding AppointmentsButtonColor}" />
        </HorizontalStackLayout>

        <!-- Visits CollectionView -->
        <CollectionView ItemsSource="{Binding Visits}" 
                        IsVisible="{Binding IsVisitsVisible}"
                        EmptyView="No visits recorded yet">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#E0F7FA">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Hospital, StringFormat='Hospital: {0}'}" FontSize="14" Margin="0,5,0,0"/>
                            <Label Text="{Binding Doctor, StringFormat='Doctor: {0}'}" FontSize="14"/>
                            <Label Text="{Binding Department, StringFormat='Department: {0}'}" FontSize="14"/>
                            <Label Text="{Binding Diagnosis, StringFormat='Diagnosis: {0}'}" FontSize="14" LineBreakMode="TailTruncation" MaxLines="2"/>
                        </VerticalStackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VisitTappedCommand}"
                                                  CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Appointments CollectionView -->
        <CollectionView ItemsSource="{Binding Appointments}" 
                        IsVisible="{Binding IsAppointmentsVisible}"
                        EmptyView="No appointments scheduled yet">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="8" BackgroundColor="#FFF3E0">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Time, StringFormat='Time: {0}'}" FontSize="14" Margin="0,5,0,0"/>
                            <Label Text="{Binding Hospital, StringFormat='Hospital: {0}'}" FontSize="14"/>
                            <Label Text="{Binding Location, StringFormat='Location: {0}'}" FontSize="14"/>
                            <Label Text="{Binding Reason, StringFormat='Reason: {0}'}" FontSize="14" LineBreakMode="TailTruncation" MaxLines="2"/>
                        </VerticalStackLayout>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AppointmentTappedCommand}"
                                                  CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
